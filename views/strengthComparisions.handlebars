<div class="container">
    <h1 class="page-title">Strength Comparisons</h1>
    {{#if data.length}}
        <ul class="list-group">
            {{#each data}}
                <li class="list-group-item">
                    <strong>{{exercise}}</strong>:
                    Weight: {{weight}} kg, Reps: {{reps}}, 1RM: {{oneRepMax}} kg
                    (Body Weight: {{bodyWeight}} kg, Height: {{height}} cm, Experience: {{experienceLevel}})
                    - Recorded on {{date}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p class="no-data">No strength data found.</p>
    {{/if}}

    <h2>Add New Strength Data</h2>
    <form action="/strengthComparisons" method="POST" class="form">
        <div class="form-group">
            <label for="exercise">Exercise:</label>
            <input type="text" id="exercise" name="exercise" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="weight">Weight Lifted (kg):</label>
            <input type="number" id="weight" name="weight" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="reps">Reps:</label>
            <input type="number" id="reps" name="reps" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="bodyWeight">Body Weight (kg):</label>
            <input type="number" id="bodyWeight" name="bodyWeight" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="height">Height (cm):</label>
            <input type="number" id="height" name="height" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="experienceLevel">Experience Level:</label>
            <select id="experienceLevel" name="experienceLevel" class="form-control" required>
                <option value="beginner">Beginner</option>
                <option value="intermediate">Intermediate</option>
                <option value="advanced">Advanced</option>
            </select>
        </div>
        <button type="submit" class="btn">Add Data</button>
    </form>
</div>
