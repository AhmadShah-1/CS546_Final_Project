<div class="container">
    <h1 class="page-title">Workout Plans</h1>

    <div id="error-alert" style="color:red; display:none;"></div>

    <div id="workout-plans-container"></div>

    <h2>Add New Workout Plan</h2>
    <form id="new-workout-form" class="form">
        <div class="form-group">
            <label for="plan-name">Plan Name:</label>
            <input type="text" id="plan-name" name="planName" class="form-control" required />
        </div>

        <h3>Exercises:</h3>
        <div id="exercises-container"></div>

        <button type="button" id="add-exercise-btn" class="btn btn-secondary">Add Exercise</button>
        <br /><br />

        <button type="submit" class="btn btn-primary">Create Workout Plan</button>
    </form>

    {{#if script_partial}}
        {{> (lookup . 'script_partial') }}
    {{/if}}
</div>
